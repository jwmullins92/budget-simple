<script>
    const fixed = document.querySelector("#fixed")
    const payDate = document.querySelector("#pay-date")
    fixed.addEventListener('change', (event) => {
        if (fixed.value === "true") {
            payDate.classList.remove('hide')
        } else {
            payDate.classList.add('hide')
        }
    })
</script>