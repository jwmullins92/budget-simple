<!-- Transaction Table -->
<!-- Link to log new transaction -->
<div class="col-11 d-flex mb-3 justify-content-between align-items-baseline">
    <a class="btn btn-success btn-md d-none d-md-block" href="/transactions/new">Log Transaction</a>
    <a class="btn btn-success btn-sm d-block d-md-none" href="/transactions/new">Log Transaction</a>
    <p class="mb-0">Page <%= page %> of <%= pageNums %> </p>
</div>

<div class="row g-0 mb-3 t-table">


    <!-- Table headers start -->
    <div class="col-2 fs-7 border border-2 bg-light fw-bold">
        <p class="ms-1 my-0">Date</p>
    </div>
    <div class="col-4 fs-7 border border-2 border-start-0 bg-light fw-bold">
        <p class="ms-1 my-0">Description</p>
    </div>
    <div class="col-3 fs-7 border border-2 border-start-0 bg-light fw-bold">
        <p class="ms-1 my-0">Category</p>
    </div>
    <div class="col-2 fs-7 border border-2 border-start-0 bg-light fw-bold">
        <p class="ms-1 my-0">Total</p>
    </div>
    <div class="col-1"></div>
    <!-- Table headers end -->

    <% for(let t of transactions) {%>
    <% if(t.user) {%>
    <% if(currentUser && t.user._id.equals(currentUser._id)) {%>

    <!-- Table data Start -->
    <!-- Transaction date -->
    <div class="fs-7 col-2 border border-2 border-top-0 alt table-alt">
        <p class="ms-1 my-0"><%= t.date.getMonth() + 1%>/<%= t.date.getDate() %> </p>
    </div>

    <!-- Description -->
    <div class="fs-7 col-4 border border-2 border-top-0 border-start-0 alt table-alt">
        <% if (t.note) {%>
        <p class="ms-1 my-0"> <%= t.note %> </p>
        <% } else { %>
        <p class="ms-1 my-0"> - </p>
        <% } %>
    </div>

    <!-- Category -->
    <div class="fs-7 col-3 border border-top-0 border-start-0 border-2 alt table-alt">
        <p class="ms-1 my-0"><%= t.category.title %> </p>
    </div>

    <!-- Amount -->
    <div class="fs-7 col-2 border border-2 border-top-0 border-start-0 text-end alt table-alt">
        <p class="me-2 my-0"> $<%= t.amount %></p>
    </div>

    <!-- Edit button -->
    <div class="fs-7 my-auto col-1">
        <a class="ms-1 bi-pencil-square" href="transactions/<%=t._id%>/edit"></a>
    </div>
    <!-- Table data end -->

    <% } %>
    <% } %>
    <% } %>