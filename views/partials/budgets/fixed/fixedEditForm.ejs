<!-- Hidden form to change budgeted amount for fixed categories -->

<div class="hide amount">
    <form action="/budgets/<%=budget._id%>?_method=PATCH" method="POST" class="amount-form">


        <% for(let cat of budget.categories) {%>
        <% if(cat.category.fixed) {%>

        <!-- Submits category id. This part stays hidden. Start. -->
        <input class="hide" type="text" name="categories[category]" value="<%=cat.category._id%>">
        <input type="number" class="hide ms-2 py-1 w-50" name="categories[amount]" id="amount" value="<%=cat.amount%>">
        <button class="hide btn btn-sm btn-success">Confirm</button>
        <!-- Category id input end -->

        <% } %>
        <% } %>
        <% for(let cat of budget.categories) {%>
        <% if(!cat.category.fixed) {%>

        <!-- Input for new budgeted amount start -->
        <input class="hide" type="text" name="categories[category]" value="<%=cat.category._id%>">
        <input type="number" class="hide ms-2 py-1 w-50" name="categories[amount]" id="amount" value="<%=cat.amount%>">
        <button class="hide btn btn-sm btn-success">Confirm</button>
        <!-- Input for new budgeted amount end -->

        <% } %>
        <% } %>
    </form>
</div>